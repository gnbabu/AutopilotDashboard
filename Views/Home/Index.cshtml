@{
	ViewData["Title"] = "Dashboard";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="px-3 pt-3">
	<ol class="breadcrumb mb-0">
		<li class="breadcrumb-item"><a href="#"><i class="bi bi-house"></i></a></li>
		<li class="breadcrumb-item active" aria-current="page">Auto pilot Dashboard</li>
	</ol>
</nav>

<div class="container-fluid px-4 mt-4">
	<!-- Card-like container for styling -->
	<div class="bg-white p-4 shadow-sm rounded-3">
		<!-- Date Range Form -->
		<form class="row g-3 align-items-end mb-4">
			<div class="col-md-auto">
				<label for="startDate" class="form-label">Start Date</label>
				<input type="date" class="form-control" id="startDate" value="2025-06-04" />
			</div>

			<div class="col-md-auto">
				<label for="endDate" class="form-label">End Date</label>
				<input type="date" class="form-control" id="endDate" value="2025-06-18" />
			</div>

			<div class="col-md-auto d-flex gap-2">
				<button type="submit" class="btn btn-primary">Search</button>
				<button type="button" class="btn btn-danger">Clear</button>
			</div>
		</form>

		<!-- Grid Container -->
		<div id="orders-grid-container" class="border rounded p-3" style="background-color: #f9f9f9;">
			<!-- Data table will be injected here -->
		</div>
	</div>
</div>
